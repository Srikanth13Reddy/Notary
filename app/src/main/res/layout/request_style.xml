<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="5dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/request_name_textview_Style"
            android:id="@+id/name_tv_rqst"/>
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/request_address_textview_Style"
            android:id="@+id/tv_address_rqst"/>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/request_address_textview_Style"
            android:id="@+id/tv_documents_rqst"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/dotted"
            android:layerType="software" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:text="1 day ago"
                android:fontFamily="@font/sspregular"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:id="@+id/tv_time_rqst"
                android:layout_marginBottom="12dp"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/request_notaryname_textview_Style"
                android:id="@+id/tv_notary_name"
                android:maxLines="1"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_marginStart="12sp"
                android:layout_toEndOf="@+id/tv_time_rqst"
                android:layout_toStartOf="@+id/tv_status_rqst"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="100dp"
                android:layout_marginTop="12dp"
                android:text="New"
                android:background="@drawable/request_drawable"
                android:layout_marginBottom="12dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:paddingStart="12dp"
                android:fontFamily="@font/sspregular"
                android:textAlignment="center"
                android:id="@+id/tv_status_rqst"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="12dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </RelativeLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>

