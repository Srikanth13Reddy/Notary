<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button_Style" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/button_drawable</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Nav_ImageView" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">10dp</item>
        <item name="android:tint">@color/colorPrimaryDark</item>
    </style>

    <style name="Nav_TextView" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sspregular</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>



    <style name="editText_Style" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sspregular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">12sp</item>
        <item name="android:background">@drawable/edittext_drawable</item>
    </style>

    <style name="checkbox_Style" parent="Widget.AppCompat.DrawerArrowToggle">
       <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">12sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:button">@drawable/password_icon_selector</item>
    </style>

    <style name="view_Style" parent="Widget.AppCompat.DrawerArrowToggle">
       <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/border_color</item>
        <item name="android:layout_marginStart">16sp</item>
        <item name="android:layout_marginEnd">16sp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">12sp</item>
    </style>


    <style name="notfound_textview_Style" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">@font/sspregular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="request_name_textview_Style" parent="Widget.AppCompat.DrawerArrowToggle">
       <item name="android:layout_width">wrap_content</item>
        <item name="android:text">Srikanth Reddy</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/sspbold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="request_address_textview_Style" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">323 East W Wacker</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sspregular</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="request_notaryname_textview_Style" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">Srikanth Reddy</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">12sp</item>
        <item name="android:fontFamily">@font/sspsemibold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#589000</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FF0000</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#FF0000</item>
    </style>

    <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#ffffff</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>


</resources>
