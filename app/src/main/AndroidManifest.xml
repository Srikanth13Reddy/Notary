<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apptomate.notary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.NotariesListActivity"></activity>
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.DocumentViewActivity" />
        <activity android:name=".activities.PendingActivity" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.CompleteActivity" />
        <activity android:name=".activities.InprogressActivity" />
        <activity android:name=".activities.ClientInfo" />
        <activity android:name=".activities.RequestActivity" />
        <activity android:name=".activities.NotificationActivity" />
        <activity
            android:name=".activities.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.LoginActivity" />
    </application>

</manifest>